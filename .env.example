# =============================================================================
# SIG Arena Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# =============================================================================
# Required - API Keys
# =============================================================================

# xAI API Key for Grok model access
# Get from https://console.x.ai/
XAI_API_KEY=your_xai_api_key_here

# X API Bearer Token (for X API v2 endpoints)
# Get from https://developer.x.com/
X_BEARER_TOKEN=your_x_bearer_token_here

# =============================================================================
# Required - Agent Authentication
# =============================================================================

# Agent Token for Creation/Resolution Agents
# 1. Start registry: docker-compose up -d registry
# 2. Create admin: curl -X POST localhost:3100/users/register -d '{"name":"Admin"}'
# 3. Create agent: curl -X POST localhost:3100/users \
#      -H "Authorization: Bearer <admin_token>" \
#      -H "Content-Type: application/json" \
#      -d '{"name":"Agent","role":"agent"}'
# 4. Copy the token from the response
AGENT_TOKEN=sig_your_agent_token_here

# =============================================================================
# Optional - Service URLs (defaults for Docker)
# =============================================================================

# Registry API URL
REGISTRY_URL=http://localhost:3100

# Frontend public URL for registry (browser-side)
NEXT_PUBLIC_REGISTRY_URL=http://localhost:3100

# =============================================================================
# Optional - Creation Agent Configuration
# =============================================================================

# How often to generate markets (ms) - default: 1 hour
GENERATION_INTERVAL_MS=3600000

# Markets to generate per cycle - default: 5
MAX_MARKETS_PER_RUN=5

# =============================================================================
# Optional - Resolution Agent Configuration
# =============================================================================

# How often to check for markets needing resolution (ms) - default: 1 minute
RESOLUTION_CHECK_INTERVAL_MS=60000

# Hours ahead to monitor for upcoming resolutions - default: 24
RESOLUTION_MONITOR_HOURS=24

# Max markets to resolve per cycle - default: 10
RESOLUTION_BATCH_SIZE=10

# Resolution API port - default: 3200
RESOLUTION_API_PORT=3200
